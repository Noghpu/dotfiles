# Minimal Starship Prompt - Catppuccin Mocha

format = """
$os\
$username\
$hostname\
$directory\
{{ if ne .chezmoi.os "windows" -}}
$git_branch\
$git_status\
{{ end -}}
$fill\
$time\
$cmd_duration\
$line_break\
$character"""

# Catppuccin Mocha palette differentiates modules without separators

[os]
disabled = false
style = "#b4befe"  # lavender

[os.symbols]
Windows = ""
Ubuntu = "󰕈"
SUSE = ""
Raspbian = "󰐿"
Mint = "󰣭"
Macos = "󰀵"
Manjaro = ""
Linux = "󰌽"
Gentoo = "󰣨"
Fedora = "󰣛"
Alpine = ""
Amazon = ""
Android = ""
AOSC = ""
Arch = "󰣇"
Artix = "󰣇"
CentOS = ""
Debian = "󰣚"
Redhat = "󱄛"
RedHatEnterprise = "󱄛"

[username]
show_always = true
style_user = "#f5c2e7"  # pink
style_root = "#f38ba8"  # red
format = "[ $user]($style)"

[hostname]
ssh_only = true
style = "#cba6f7"  # mauve
format = "@[$hostname]($style) "

[directory]
style = "#a6e3a1"  # green
format = " [$path]($style)"
truncation_length = 3
truncate_to_repo = true
truncation_symbol = "…/"

[directory.substitutions]
"Documents" = "󰈙 "
"Downloads" = " "
"Music" = "󰝚 "
"Pictures" = " "
"Developer" = "󰲋 "

{{ if ne .chezmoi.os "windows" -}}
[git_branch]
style = "#fab387"  # peach
format = " [$symbol$branch]($style)"
symbol = ""

[git_status]
style = "#f9e2af"  # yellow
format = "[$all_status$ahead_behind]($style)"
ahead = "⇡${count}"
behind = "⇣${count}"
diverged = "⇕⇡${ahead_count}⇣${behind_count}"
conflicted = "="
untracked = "?"
stashed = "$"
modified = "!"
staged = "+"
renamed = "»"
deleted = "✘"

{{ end -}}
[fill]
disabled = true
symbol = " "

[time]
disabled = false
style = "#89dceb"  # sky
format = "[  $time]($style)"
time_format = "%R"

[cmd_duration]
style = "#94e2d5"  # teal
format = " [$duration]($style)"
min_time = 1000

[line_break]
disabled = false

[character]
success_symbol = "[❯](bold #a6e3a1)"  # green
error_symbol = "[❯](bold #f38ba8)"    # red
